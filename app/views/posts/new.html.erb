
<%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :issuccess %>
      <%= f.check_box :issuccess %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
